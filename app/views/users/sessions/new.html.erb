<div class="my-auto" style= "background-image: url(<%= asset_path "back_img7.jpg" %>);background-size: cover; height: 100vh;">

<center>

    <br>
    <br>
    <br>
    <br>
    <div class="card" style="width: 30rem; opacity: 0.92; ">
    <br>
    <h2>Se connecter</h2>
    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <div class="field form-group">
        <label for="exampleInputEmail1">Email</label>

        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", id: 'sign_up_form' %>
      </div>

      <div class="field">
        <%= f.label :mot_de_passe %><br/>
        <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "current-password", id: 'sign_up_form' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :se_souvenir_de_moi %>
          <br>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "C'est parti !", class:"btn btn-primary btn-round" %>
        <br>
        <br>

      </div>
    <% end %>

    <%= render "users/shared/links" %>
    <br>

  </div>
</center>
</div>
