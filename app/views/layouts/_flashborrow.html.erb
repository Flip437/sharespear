<% flash.each do |type, message| %>
  <% if type == 'notice' %>
    <div class="alert alert-success" role="alert">
      <%= message %>
    </div>
  <% elsif type == 'alert' %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% elsif type == 'error' %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
  <% elsif type == 'warning' %>
    <div class="alert alert-warning" role="alert">
      <%= message %>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>
