<div class="my-auto" style= "background-image: url(<%= asset_path "back_img2.jpg" %>);background-size: cover; height: 100vh;">
  <div class="container pt-5">
    <div class="card text-center my-auto">
      <div class="card-body">
        <h3 class="card-title"><%=@book_copy.title %></h3>
      </div>
      <div class="container">
        <%= form_with(model: [ @book_copy, Borrow.new ], url: book_copy_borrows_path) do |f| %>
          <%= f.label 'message au propriétaire*' %><br>
          <%= f.text_area :message, size: "60x12", class: "form-control", placeholder:"Expliquez qui vous êtes et pourquoi vous voulez emprunter son livre.. " %>
          <div class="form-row ">
            <div class="form-group col-md-3">
              <%= f.label 'durée*' %>
              <%= f.select :duree, options_for_select([['1 mois', 1], ['2 mois', 2], ['3 mois', 3], ['4 mois', 4], ['5 mois', 5], ['6 mois', 6], ['7 mois', 7], ['8 mois', 8], ['9 mois', 9], ['10 mois', 10], ['11 mois', 11], ['12 mois', 12]], 2),{}, { class: "form form-group form-control"} %>
            </div>
            <div class="form-group col-md-3 ">
              <label for="">Email*</label>
              <input class="form-control" value="<%=@user.email%>" readonly= "true"></input>
            </div>
            <div class="form-group col-md-3">
              <label for="">Numéro de Téléphone</label>
              <input class="form-control" value="<%=@user.phone%>" readonly= "true"></input>
            </div>
            <div class="form-group col-md-3">
              <%= link_to "Modifier mes informations",edit_user_path(current_user.id) %>
            </div>
          </div>
          <%= f.submit "Envoyer" , class: "btn btn-primary btn-round btn-lg"%>
        <% end %>
      </div>

      <%= link_to "Soutenir ShaRespeare.fr", "https://paypal.me/pools/c/8lQxWDyKwS", method: :get, class: 'btn btn-default btn-round shopping_credit-card btn-lg'  %>
      <div class="card-footer text-muted mb-2">
        <div class="card-header mt-2">
          Propriétaire : <%=User.find(@book_copy.user_id).first_name %> <%=User.find(@book_copy.user_id).last_name %>
        </div>
      </div>
    </div>
  </div>
</div>
