<div class="media media-post com<%=index%>">
  <%= link_to user_path(current_user.id) do %>
    <div class="avatar">
      <% if comment.user.avatar.attached? %>
        <%= image_tag comment.user.avatar, class:"img-fluid", style:"max-width: 200%;" %>
      <% else %>
        <%= image_tag("sharespeare1.png", class:"img-fluid") %>
      <% end %>
    </div>
  <%end%>
  <div class="media-body">
    <h5 class="media-heading"> <%= comment.user.first_name %> <small class="text-muted"> </small></h5>
    <p> <%= comment.content %> </p>
    <div class="media-footer">

    <%= link_to book_copy_post_comment_path(@book, post, comment), :method=> :put, :class => "btn btn-danger btn-neutral pull-right" do %>
      <i class="now-ui-icons ui-2_favourite-28"></i> <%= comment.like %>
    <%end%>

    <% if comment.user == current_user %>
      <%= link_to book_copy_post_comment_path(@book, post, comment, :loopindex => index), :method=> :delete, :class => "btn btn-danger btn-neutral pull-right combtndel#{index}", remote: true do %>
        <i class="now-ui-icons ui-1_simple-remove"></i>
      <%end%>
    <% end %>

    </div>
  </div>
</div>
