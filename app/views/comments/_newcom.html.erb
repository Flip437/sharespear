<div class="media media-post">

    <%= link_to user_path(current_user.id) do %>
    <div class="avatar">     
        <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, class:"img-fluid", style:"max-width: 200%;" %>
        <% else %>
        <%= image_tag("sharespeare1.png", class:"img-fluid") %>
        <% end %>    
    </div>
    <%end%>

    <div class="media-body">
    <%= form_with scope: :comment, url: book_copy_post_comments_path(@book, post), html: {class: "nifty_form"}, remote: true do |f| %>
        <br>
        <%= f.text_area :content, size: "60x12", class: "form-control", placeholder: "Tu peux répondre à cet avis" %>
        <br>
        <%= button_tag( :class => "btn btn-primary pull-right") do %>
            Répondre <i class="now-ui-icons ui-1_send"></i>
        <% end %>
    <% end %>
    </div>

</div>