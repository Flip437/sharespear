

<div class="container">
  <h1></h1>
  <div class="card text-center card-pricing">
    <div class="card-header mt-2">
      <% if @borrow_to_show.borrow_status==0 %>
        <span class="badge badge-warning">demande en cours...</span>
      <% end %>
      <% if @borrow_to_show.borrow_status==1 %>
        <span class="badge badge-danger">prêt refusé</span>
      <% end %>
      <% if @borrow_to_show.borrow_status==2 %>
        <span class="badge badge-success">prêt accepté</span>
      <% end %>
      <% if @borrow_to_show.borrow_status==3 %>
        <span class="badge badge-success">prêt terminé</span>
      <% end %>

    </div>
    <div class="card-body">
      <div class="icon icon-primary">
          <i class="now-ui-icons education_agenda-bookmark"></i>
      </div>

      <h4 class="card-title"><%= @book_to_show.title %></h4>
      <p class="card-text">Appartennant à : <%= @user_preteur.first_name %> <%= @user_preteur.last_name %></p>
      <p class="card-text">Demandé par : <%= @user_emprunteur.first_name %> <%= @user_emprunteur.last_name %></p>
      <p class="card-text">du <%= @borrow_to_show.start_date.strftime('%d %b  %Y')%> au <%= @borrow_to_show.end_date.strftime('%d %b  %Y')%> </p>
      <div class="card">
        <div class="card-body">
          <blockquote class="blockquote blockquote-primary mb-0">
            <p><%= @borrow_to_show.message %></p>
            <footer class="blockquote-footer">Message envoyé par  <%= @user_emprunteur.first_name %> <%= @user_emprunteur.last_name %></footer>
          </blockquote>
        </div>
      </div>

      <% if @borrow_to_show.borrow_status==0  && current_user.id== @user_preteur.id %>
      <button type="button" class="btn btn-primary"><%= link_to "Accepter", bookcopy_borrow_path(@borrow_to_show.book_copy_id,@borrow_to_show.id, :bouton_value => 1), method:"patch"%></button>
      <button type="button" class="btn btn-primary" ><%= link_to "Refuser", bookcopy_borrow_path(@borrow_to_show.book_copy_id,@borrow_to_show.id, :bouton_value => 0), method:"patch"%></button>
      <% end %>

    </div>

  </div>

  <% if @borrow_to_show.borrow_status==0 && current_user.id== @user_preteur.id %>
